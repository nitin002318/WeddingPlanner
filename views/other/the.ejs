<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <style>
    .container {
      max-width: 800px;
      margin: 20px auto;
      padding: 20px;
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    h1 {
      text-align: center;
    }
    .color-selector {
      text-align: center;
      margin-bottom: 20px;
    }
    .color-option {
      display: inline-block;
      width: 50px;
      height: 50px;
      margin: 5px;
      cursor: pointer;
      border-radius: 50%;
      border: 2px solid transparent;
    }
    .color-option:hover {
      border-color: #333;
    }
    #color-preview {
      width: 100px;
      height: 100px;
      margin: 0 auto;
      border-radius: 8px;
      box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    }
    .back-button {
      position: absolute;
      top: 20px;
      left: 20px;
      padding: 10px;
      background-color: #f0f0f0;
      border: 1px solid #ccc;
      border-radius: 5px;
      cursor: pointer;
    }
  </style>
</head>
<body>
<button class="back-button" onclick="goBack()">Back</button>

<br>
<br>
<br>

<br>
<br>
<br>

<div class="container">
  <h1>Select theme color</h1>
  <div class="color-selector">
    <div class="color-option" style="background-color: #f44336;"></div>
    <div class="color-option" style="background-color: #2196f3;"></div>
    <div class="color-option" style="background-color: #4caf50;"></div>
    <div class="color-option" style="background-color: #ff9800;"></div>
    <div class="color-option" style="background-color: #9c27b0;"></div>
  </div>
  <div id="color-preview"></div>
</div>

<script>
  const colorOptions = document.querySelectorAll('.color-option');
  const colorPreview = document.getElementById('color-preview');

  colorOptions.forEach(option => {
    option.addEventListener('click', () => {
      const color = option.style.backgroundColor;
      colorPreview.style.backgroundColor = color;
    });
  });

  function goBack() {
    window.history.back();
  }
</script>

</body>
</html>
