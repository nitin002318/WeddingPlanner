<div class="container">
    <h1 class="mt-5">Edit Venue </h1>

    <form class="needs-validation mt-4" action="/products/<%=foundProduct._id%>?_method=PATCH" method="POST" novalidate>
        <div class="mb-3">
            <label for="name" class="form-label">Name:</label>
            <input type="text" class="form-control" name="name" id="naam" value="<%=foundProduct.name%>" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please provide a Name.
            </div>
        </div>
        <div class="mb-3">
            <label for="pic" class="form-label">Image:</label>
            <input type="text" class="form-control" name="img" id="pic" value="<%=foundProduct.img%>" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please provide an Image.
            </div>
        </div>
        <div class="mb-3">
            <label for="daam" class="form-label">Price:</label>
            <input type="text" class="form-control" name="price" id="daam" value="<%=foundProduct.price%>" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please provide a Price.
            </div>
        </div>
        <div class="mb-3">
            <label for="des" class="form-label">Location:</label>
            <textarea class="form-control" name="desc" id="des" rows="3"><%=foundProduct.desc%></textarea>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please provide a Description.
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Edit this Venue</button>
    </form>
</div>

<script>
    (function() {
        'use strict';
        window.addEventListener('load', function() {
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.getElementsByClassName('needs-validation');
            // Loop over them and prevent submission
            var validation = Array.prototype.filter.call(forms, function(form) {
                form.addEventListener('submit', function(event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>

</body>
</html>
